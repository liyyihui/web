
@{
    ViewBag.Title = "登陆";
    Layout = "../_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body style="text-align:center;width:100%;height:100%;background:url('../../img/login.png') no-repeat ">
    <div class="login-div">

        <div style="margin-top: 10px;">
            <span>账号：</span> <input id="name" class="login-div-input" placeholder="输入账号" />
        </div>
        <div style="margin-top: 10px;">
            <span>密码：</span>  <input id="password" class="login-div-input" placeholder="输入密码" />
        </div>

        <button class="login-div-but" onclick="login()"> 登陆</button>
    </div>
    <script>
        $(document).keyup(function (event) {
            if (event.keyCode == 13) {
                $.ajax({
                    type: "post",
                    url: "/Login/logincheck",
                    data: { name: "lyh", password: "111111" },
                    dataType: "json",
                    success: function () {
                        console.log("返回");
                    }
                });
            }
        });
        function login() {
            $.ajax({
                type: "post",
                url: "/Login/logincheckjson",
                data: { name: "lyh", password: "111111" },
                dataType: "json",
                success: function (data) {
                    
                    console.log(data);
                }
            });
        }
    </script>
</body>
</html>
